{% extends '!OroCRMAccountBundle:Account:update.html.twig' %}

{% block content_data %}
    {% set id = 'account-profile' %}

    {% set dataBlocks = [{
        'title': 'General'|trans,
        'class': 'active',
        'subblocks': [
            {
                'title': 'Basic Information'|trans,
                'data': [
                    form_row(form.name),
                    form_row(form.tags),
                    form_row(form.b2bcustomer.name, {'label' : 'orocrm.sales.b2bcustomer.entity_label'|trans}),
                ]
            }
        ]
    }] %}

    {% set dataBlocks = dataBlocks|merge( [{
        'title' : 'Addresses'|trans,
        'subblocks': [
            {
                'title': 'orocrm.sales.b2bcustomer.billing_address.label'|trans,
                'data': [form_widget(form.b2bcustomer.billingAddress)]
            },
            {
                'title': 'orocrm.sales.b2bcustomer.shipping_address.label'|trans,
                'data': [form_widget(form.b2bcustomer.shippingAddress)]
            },
        ]
    }] ) %}

    {% set additionalData = [] %}
    {% for child in form.children if child.vars.extra_field is defined and child.vars.extra_field %}
        {% set additionalData = additionalData|merge([form_row(child)]) %}
    {% endfor %}
    {% if additionalData is not empty %}
        {% set dataBlocks = dataBlocks|merge([{
            'title': 'Additional'|trans,
            'subblocks': [{
                'title': '',
                'useSpan': false,
                'data' : additionalData
            }]
        }] ) %}
    {% endif %}

    {% if form.contacts is defined%}
        {% set dataBlocks = dataBlocks|merge([{
            'title' : 'orocrm.account.contacts.label'|trans,
            'subblocks': [{
                'title' : null,
                'useSpan': false,
                'data' : [
                    form_widget(form.default_contact),
                    form_widget(form.contacts)]
            }]
        }] ) %}
    {% endif %}

    {% set data = {
        'formErrors': form_errors(form)? form_errors(form) : null,
        'dataBlocks': dataBlocks,
    } %}

    {{ render_block('OroUIBundle:actions:update.html.twig', 'content_data') }}
{% endblock content_data %}
