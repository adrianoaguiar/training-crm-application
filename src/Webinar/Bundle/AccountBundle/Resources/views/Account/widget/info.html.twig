{% import 'OroUIBundle::macros.html.twig' as UI %}
{% import 'OroTagBundle::macros.html.twig' as tag %}
{% import 'OroEntityConfigBundle::macros.html.twig' as entityConfig %}

<div class="widget-content">
    <div class="row-fluid form-horizontal">
        <div class="responsive-block">
            {{ UI.renderProperty('orocrm.account.name.label'|trans, account.name) }}

            {% if resource_granted('oro_tag_view_tag_cloud') %}
                {{ UI.renderHtmlProperty('oro.tag.entity_plural_label'|trans, tag.renderView(account)) }}
            {% endif %}
        </div>

        <div class="responsive-block">
            {{ entityConfig.renderDynamicFields(account) }}

            {%- set customerLink -%}
            <a href="{{ path('orocrm_sales_b2bcustomer_view', {'id': b2bcustomer.id}) }}">{{ b2bcustomer }}</a>
            {%- endset -%}

            {{ UI.renderHtmlProperty('orocrm.sales.b2bcustomer.entity_label'|trans, customerLink) }}


            {{ entityConfig.renderDynamicFields(b2bcustomer) }}
        </div>
    </div>
</div>
