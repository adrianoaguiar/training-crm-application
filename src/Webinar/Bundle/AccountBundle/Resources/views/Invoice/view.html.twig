{% extends 'OroUIBundle:actions:view.html.twig' %}
{% import 'OroUIBundle::macros.html.twig' as macros %}

{% oro_title_set({params : {"%invoice.id%": entity.id} }) %}

{% block navButtons %}
    {% if resource_granted('EDIT', entity) %}
        {{ UI.editButton({
            'path' : path('webinar_account_invoice_update', { 'id': entity.id }),
            'entity_label': 'webinar.invoice.entity_label'|trans
        }) }}
    {% endif %}
    {% if resource_granted('DELETE', entity) %}
        {{ UI.deleteButton({
            'dataUrl': path('webinar_api_delete_invoice', {'id': entity.id}),
            'dataRedirect': path('webinar_account_invoice_index'),
            'aCss': 'no-hash remove-button',
            'id': 'btn-remove-invoice',
            'dataId': entity.id,
            'entity_label': 'webinar.invoice.entity_label'|trans
        }) }}
    {% endif %}
{% endblock navButtons %}

{% block stats %}
    <li>{{ 'oro.ui.created_at'|trans }}: {{ entity.createdAt ? entity.createdAt|oro_format_datetime : 'N/A' }}</li>
    <li>{{ 'oro.ui.updated_at'|trans }}: {{ entity.updatedAt ? entity.updatedAt|oro_format_datetime : 'N/A' }}</li>
{% endblock stats %}

{% block pageHeader %}
    {% set breadcrumbs = {
        'entity': entity,
        'indexPath': path('webinar_account_invoice_index'),
        'indexLabel': 'webinar.invoice.entity_plural_label'|trans,
        'entityTitle': entity.note
        }
    %}
    {{ parent() }}
{% endblock pageHeader %}

{% block content_data %}
    {% set informationWidget %}
    {{ oro_widget_render({
        'widgetType': 'block',
        'url': path('webinar_invoice_info', {id: entity.id}),
        'title': 'Invoice Information'|trans
    }) }}
    {% endset %}

    {% set dataBlocks = [
        {
            'title': 'General Information'|trans,
            'class': 'active',
            'subblocks': [
                {'data' : [informationWidget] },
            ]
        }
    ] %}

    {% set id = 'invoiceView' %}
    {% set data = {'dataBlocks': dataBlocks} %}
    {{ parent() }}
{% endblock content_data %}
