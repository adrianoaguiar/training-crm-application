{% extends 'OroUIBundle:actions:update.html.twig' %}

{% oro_title_set({params : {"%invoice.id%": form.vars.value.id|default('N/A')} }) %}

{% set formAction = form.vars.value.id ? path('webinar_account_invoice_update', { 'id': form.vars.value.id }) : path('webinar_account_invoice_create')  %}

{% block head_script %}
    {{ parent() }}
    {% block stylesheets %}
        {{ form_stylesheet(form) }}
    {% endblock %}
{% endblock %}

{% block navButtons %}
    {% if form.vars.value.id and resource_granted('DELETE', form.vars.value) %}
        {{ UI.deleteButton({
            'dataUrl': path('webinar_api_delete_invoice', {'id': form.vars.value.id}),
            'dataRedirect': path('webinar_account_invoice_index'),
            'aCss': 'no-hash remove-button',
            'dataId': form.vars.value.id,
            'id': 'btn-remove-invoice',
            'entity_label': 'webinar.invoice.entity_label'|trans,
        }) }}
        {{ UI.buttonSeparator() }}
    {% endif %}

    {{ UI.cancelButton(path('webinar_account_invoice_index')) }}

    {% set html = UI.saveAndCloseButton() %}
    {% if form.vars.value.id or resource_granted('webinar_account_invoice_update') %}
        {% set html = html ~ UI.saveAndStayButton() %}
    {% endif %}

    {{ UI.dropdownSaveButton({'html': html}) }}
{% endblock %}

{% block pageHeader %}
    {% if form.vars.value.id %}
        {% set breadcrumbs = {
            'entity':      form.vars.value,
            'indexPath':   path('webinar_account_invoice_index'),
            'indexLabel': 'webinar.invoice.entity_label'|trans,
            'entityTitle': form.vars.value.eventName|default('N/A')
        }
        %}
        {{ parent() }}
    {% else %}
        {% set title = 'oro.ui.create_entity'|trans({'%entityName%': 'webinar.invoice.entity_label'|trans}) %}
        {% include 'OroUIBundle::page_title_block.html.twig' with { title: title } %}
    {% endif %}
{% endblock pageHeader %}

{% block content_data %}
    {% set id = 'invoice' %}

    {% set dataBlocks = [{
        'title': 'General'|trans,
        'class': 'active',
        'subblocks': [
            {
                'title': 'Basic Information'|trans,
                'data': [
                    form_row(form.note),
                    form_row(form.total),
                    form_row(form.discount),
                    form_row(form.tax),
                    form_row(form.datePaid),
                ]
            }
        ]
    }] %}

    {% set data = {
        'formErrors': form_errors(form)? form_errors(form) : null,
        'dataBlocks': dataBlocks,
        }
    %}
    {{ parent() }}
{% endblock content_data %}
